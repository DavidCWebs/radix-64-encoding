#include "utilities.h"

void hexstringToBytes(const char *hexstring, unsigned char **bytes)
{
	size_t inSize = strlen(hexstring);
	*bytes = malloc((inSize / 2) * sizeof(**bytes));
	printf("input size %lu\n", inSize);
	printf("bytes size %lu\n", sizeof(bytes)/sizeof(bytes[0]));
	**bytes = 'x';
	*(*bytes+1) = 'y';
	*(*bytes+2) = 0;
}

